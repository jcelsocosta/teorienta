{
  "compilerOptions": {
    
    "target": "es5",                         
    "module": "commonjs",
    "moduleResolution": "node",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "outDir": "compiledCode",
    "typeRoots": [ "./node_modules/@types" ],
    "types": ["node","cucumber"] 
  },
  "exclude": [
    "node_modules",
    "typescript"
  ]
}
